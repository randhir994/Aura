<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#022635">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut nonLorem ipsum dolor sit amet, consectetur adipiscing elit. Ut nonLorem ipsum dolor sit amet, consectetur adipiscing elit. Ut nonLorem ipsum dolor sit amet, consectetur adipiscing elit. Ut non"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#fff"
                android:id="@+id/eventIntroText1"/>


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:id="@+id/eventIntroImage1"
                android:layout_gravity="center"
                android:src="@drawable/white_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPACE CAPACITY"

                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold|italic"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#ffff00"
                        android:id="@+id/eventIntroText2.1"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 500 Person Minimum \n 1200 Person Maximum"
                        android:layout_gravity="start"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"

                        android:textStyle="normal|italic"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#fff"
                        android:id="@+id/eventIntroText3.1"/>



                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:gravity="end"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OPENING HOURS"

                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold|italic"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#ffff00"
                        android:id="@+id/eventIntroText2.2"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06 A.M. to 12 P.M."
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"

                        android:textStyle="normal|italic"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#fff"
                        android:id="@+id/eventIntroText3.2"/>



                </LinearLayout>






            </LinearLayout>



            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:id="@+id/eventIntroImage2"
                android:layout_gravity="center"
                android:src="@drawable/white_line" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADDRESS"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="start"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="5dp"
                    android:background="#ffff00"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#022635"
                    android:id="@+id/eventIntroText5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTACT \n +919543315742"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:layout_alignParentRight="true"
                    android:paddingRight="5dp"
                    android:background="#ffff00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#022635"
                    android:id="@+id/eventIntroText6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Jehan,\n G-66,Rama Road,\n Kiriti Nagar,\nNew Delhi,110015"
                    android:layout_gravity="start"
                    android:textSize="15sp"
                    android:layout_below="@+id/eventIntroText5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="normal|italic"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#fff"
                    android:id="@+id/eventIntroText7"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENQUIRE"
                    android:textSize="30sp"
                    android:layout_alignLeft="@+id/eventIntroText6"
                    android:layout_below="@+id/eventIntroText6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold|italic"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#ffff00"
                    android:id="@+id/eventIntroText8"/>


            </RelativeLayout>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"

                android:textColor="#ffff"

                android:hint="Name"
                android:padding="10dp"
                android:background="@drawable/edit_text_white_background"
                android:id="@+id/eventIntroEditText1"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:inputType="textEmailAddress"

                android:textColor="#ffff"

                android:hint="Email ID"
                android:padding="10dp"
                android:background="@drawable/edit_text_white_background"
                android:id="@+id/eventIntroEditText2"/>


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:inputType="textMultiLine"

                android:textColor="#ffff"

                android:hint="Your Enquiry Message\n\n\n\n\n\n"
                android:padding="10dp"
                android:background="@drawable/edit_text_white_background"
                android:id="@+id/eventIntroEditText3"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SUBMIT"
                android:textSize="25sp"
                android:textStyle="bold"
                android:padding="15dp"
                android:background="#33cccc"
                />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>