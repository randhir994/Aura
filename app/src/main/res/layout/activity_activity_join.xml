<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="82dp"
                android:id="@+id/editRedImage1"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:src="@drawable/adventure" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:id="@+id/activityJoinImage2"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/vectorshover"
                />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:hint="name"
                android:textStyle="bold|italic"
                android:textColorHint="#FFFF00"
                android:textColor="#FFFF00"
                android:id="@+id/activityJoinText1"
                android:background="@drawable/textx"/>


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:hint="age"
                android:inputType="number"
                android:textStyle="bold|italic"
                android:textColorHint="#FFFF00"
                android:textColor="#FFFF00"
                android:id="@+id/activityJoinText2"
                android:background="@drawable/textx"/>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:hint="contant no."
                    android:inputType="phone"
                    android:textColor="#FFFF00"
                    android:textStyle="bold|italic"
                    android:textColorHint="#FFFF00"
                    android:id="@+id/activityJoinText3"
                    android:background="@drawable/textx"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activityJoinText3"
                    android:gravity="start"
                    android:textStyle="normal"
                    android:padding="8dp"
                    android:text="You'll be contacted by the activity creator on this number."
                    android:textSize="20sp"
                    android:id="@+id/activityJoinView1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/time_info"
                    android:textColor="#02cee5"
                    android:visibility="gone"/>

            </RelativeLayout>





            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:id="@+id/activityJoinImage3"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:src="@drawable/vectorshover"


                />


            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:id="@+id/activityJoinImage4"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="90dp"
                android:src="@drawable/bluebird" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>