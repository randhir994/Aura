<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#022635">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/imageView12"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/hi"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="50dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:id="@+id/imageView13"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/youneed" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView14"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/electr" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:padding="10dp"
                android:hint="email id / contact no."
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="italic"
                android:inputType="text"
                android:singleLine="true"
                android:textColorHint="#ffff00"
                android:textColor="@color/yellow"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/texts"
                android:layout_marginTop="30dp" />

            />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText1"
                android:layout_gravity="center"
                android:hint="pin"
                android:inputType="number"
                android:singleLine="true"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColorHint="#ffff00"
                android:padding="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/texts"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:id="@+id/imageView15"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/yellowbird"
                android:onClick="go"
                />

            />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView16"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/forgot_pin" />
            <ImageView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="75dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/electr" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/create_your_happy"/>
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/join"
                android:onClick="join"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/signInImage5"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"

                android:layout_marginBottom="20dp"
                android:src="@drawable/group3" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>