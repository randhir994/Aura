<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/group4">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MADHUR"
                android:textSize="60sp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#ffff00"
                android:id="@+id/signInText1"/>

            <ImageView
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:id="@+id/signInImage1"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/smart"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT PROFILE"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:onClick="editProfile"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#ffff00"
                android:id="@+id/signInText2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN OUT"
                android:textSize="25sp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#ffff00"
                android:layout_marginBottom="30dp"
                android:id="@+id/signInText3"/>

            <ImageView
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:id="@+id/signInImage2"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/smart"
                android:layout_marginBottom="25dp"
                />



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"

                android:id="@+id/imageView19"

                android:layout_gravity="center"
                android:src="@drawable/tour_signed_in"

                android:onClick="liveTour" />




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/imageView20"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/paintball_signed_in"

                android:onClick="liveActivity"/>



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/imageView21"
                android:padding="5dp"

                android:layout_gravity="center_horizontal"
                android:src="@drawable/gocarting"
                 />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:id="@+id/imageView22"
                android:layout_marginTop="150dp"
                android:layout_gravity="center"
                android:onClick="seePreviousActivity"
                android:src="@drawable/see_previous_tours_activities"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/signInImage5"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"

                android:layout_marginBottom="20dp"
                android:src="@drawable/group3" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>