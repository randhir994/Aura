<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group4">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/pinImage1"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:src="@drawable/edit" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:id="@+id/pinImage2"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/upper"
                />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:paddingLeft="10dp"
                android:inputType="textCapCharacters"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:hint="MADHUR"
                android:textStyle="bold"
                android:textColorHint="#FF03C9E2"
                android:textColor="#FF03C9E2"
                android:id="@+id/pinText1"
                android:background="@drawable/texts"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:inputType="phone"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:hint="8882233022"
                android:textStyle="bold"
                android:textColorHint="#FF03C9E2"
                android:textColor="#FF03C9E2"
                android:id="@+id/pinText2"
                android:background="@drawable/texts"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:inputType="textEmailAddress"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:hint="EXAMPLE@GMAIL.COM"
                android:textColorHint="#FF03C9E2"
                android:textColor="#FF03C9E2"
                android:id="@+id/pinText3"
                android:textStyle="bold"
                android:background="@drawable/texts"/>

            <EditText
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:hint="****"
            android:textColorHint="#FF03C9E2"
                android:textColor="#FF03C9E2"
            android:textStyle="bold"
            android:background="@drawable/texts"
            android:id="@+id/editText4"
            android:drawableRight="@drawable/u"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:id="@+id/pinImage3"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/type" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:paddingRight="10dp"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#FF03C9E2"
                android:id="@+id/pinText5"
                android:background="@drawable/texts"/>/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:id="@+id/pinImage4"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:onClick="saveSetting"
                android:layout_marginRight="50dp"
                android:src="@drawable/group2" />




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/profileImage"
                android:layout_marginTop="35dp"
                android:onClick="saveSetting"
                android:src="@drawable/group1" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/pinImage5"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/group3" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>