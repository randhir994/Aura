<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f1012">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:id="@+id/imageView"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/auraaa" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView2"
                    android:onClick="backButton"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/backbutton"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:src="@drawable/userlogo"
                    android:id="@+id/imageView7"
                    android:layout_alignTop="@+id/textView"
                    android:layout_alignLeft="@+id/imageView2"
                    android:layout_alignStart="@+id/imageView2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MADHUR"
                    android:id="@+id/textView"
                    android:textColor="#fffb2d"
                    android:textSize="20dp"
                    android:textIsSelectable="true"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_toRightOf="@+id/imageView7"
                    android:layout_toEndOf="@+id/imageView7"
                    android:layout_marginLeft="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEW DELHI"

                    android:id="@+id/textView2"
                    android:background="@drawable/yellowbox"
                    android:textColor="#0f1012"
                    android:textSize="20dp"
                    android:textStyle="bold"


                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JULY"

                    android:textColor="#fffb2d"
                    android:textSize="20dp"
                    android:id="@+id/textView4"
                    android:textStyle="bold"
                    android:paddingRight="2dp"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_toLeftOf="@+id/textView3"
                    android:layout_toStartOf="@+id/textView3"
                    android:layout_marginTop="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:id="@+id/textView3"
                    android:textColor="#0f1012"
                    android:textSize="30dp"
                    android:background="@drawable/circle"
                    android:textStyle="bold"


                    android:padding="4dp"
                    android:layout_gravity="right"
                    android:textIsSelectable="true"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/outgoingtour"
                android:layout_marginTop="10dp"/>
            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:columnCount="2"
                android:rowCount="3"
                android:columnOrderPreserved="false"
                android:contextClickable="false"
                android:forceHasOverlappingRendering="false"
                android:rowOrderPreserved="false">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:id="@+id/imageView11"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:onClick="info"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:src="@drawable/himachaladventure"
                    />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:id="@+id/imageView12"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:src="@drawable/walk"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:id="@+id/imageView13"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:src="@drawable/walk"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:src="@drawable/himachaladventure"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"

                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:src="@drawable/himachaladventure"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:src="@drawable/walk"/>
               
            </GridLayout>



            </LinearLayout>

    </ScrollView>


</LinearLayout>